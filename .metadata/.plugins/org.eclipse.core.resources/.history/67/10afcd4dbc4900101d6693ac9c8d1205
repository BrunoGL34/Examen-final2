spring.application.name=ApiGateway
server.port=9000

# Eureka Client activado
eureka.client.register-with-eureka=true
eureka.client.fetch-registry=true
eureka.client.service-url.defaultZone=http://localhost:8761/eureka

# Rutas a través del Service Discovery
spring.cloud.gateway.routes[0].id=VeterinariaMS
spring.cloud.gateway.routes[0].uri=lb://VETERINARIAMS
spring.cloud.gateway.routes[0].predicates[0]=Path=/producto/**

spring.cloud.gateway.routes[1].id=UsuarioMS
spring.cloud.gateway.routes[1].uri=lb://USUARIOMS
spring.cloud.gateway.routes[1].predicates[0]=Path=/usuario/**

spring.cloud.gateway.routes[2].id=RepartidorMS
spring.cloud.gateway.routes[2].uri=lb://REPARTIDORMS
spring.cloud.gateway.routes[2].predicates[0]=Path=/repartidor/**

spring.cloud.gateway.routes[3].id=ProveedorWS
spring.cloud.gateway.routes[3].uri=lb://PROVEEDORWS
spring.cloud.gateway.routes[3].predicates[0]=Path=/proveedor/**

spring.cloud.gateway.routes[4].id=ComprasWS
spring.cloud.gateway.routes[4].uri=lb://COMPRASWS
spring.cloud.gateway.routes[4].predicates[0]=Path=/compras/**
